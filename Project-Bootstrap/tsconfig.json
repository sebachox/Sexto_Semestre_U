{
  "compilerOptions": {
    // Rutas de entrada y salida
    "rootDir": "./src",
    "outDir": "./dist",

    // Entorno navegador
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "es6"],

    // Archivos de salida
    "sourceMap": true,

    // Opciones estrictas de tipado
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Ignorar chequeo de librer√≠as externas
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
